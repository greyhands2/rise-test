{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    
    
    "typeRoots": [
      "/node_modules/@types",
      "/src/local-types"
    ],
    "paths":{
      "xss-clean": ["./local-types/xss-clean"],
      "jsonwebtoken": ["./local-types/jsonwebtoken"],
      "redis": ["./local-types/redis"],
      
      
     
    }  
  },
  "include": ["src/**/*.ts", "src/auth/__tests__/register.spec.ts"],
  "exclude": ["node_modules", "local-types/**", "**/*.spec.ts", "**/*.test.ts"],
  "types": ["jest"]
  
}


